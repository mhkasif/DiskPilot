{
  "name": "diskpilot",
  "productName": "DiskPilot",
  "version": "1.0.0",
  "description": "DiskPilot – Disk Space Analyzer (TreeSize clone)",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron_config_cache=/tmp/electron-cache electron .",
    "start:win": "set electron_config_cache=C:\\Temp\\electron-cache&& electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.diskpilot.app",
    "productName": "DiskPilot",
    "copyright": "Copyright © 2025 DiskPilot Contributors",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/playstore.png",
      "category": "public.app-category.utilities",
      "target": [
        { "target": "dmg", "arch": ["x64", "arm64"] }
      ]
    },
    "win": {
      "icon": "assets/favicon.ico",
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ]
    },
    "linux": {
      "icon": "assets/playstore.png",
      "category": "Utility",
      "target": ["AppImage", "deb"]
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  }
}
